@model CarDealerProject.Models.Car

<script type="text/javascript">
    $(document).ready(function () {
        $('#CarDealerId').prepend("<option value='-1' selected='selected'></option>");
    });
    
</script>

@using (Html.BeginForm("GetAllSimilar", "Car", FormMethod.Post, new { id = "SearchForm" }))
{ 
    <h2>Search</h2>
    <br />
    @Html.AntiForgeryToken()
    <fieldset>
        <legend></legend>

        <div class="textSet">
            @Html.Label("Brand")<br/>
            @Html.DropDownList("Brand", (TempData["Brands"] ?? new List<SelectListItem>() ) as IEnumerable<SelectListItem>)
        </div>

        <div class="textSet">
            @Html.Label("Model") <br/>
            @Html.DropDownList("Model", (TempData["Models"] ?? new List<SelectListItem>() ) as IEnumerable<SelectListItem>)
        </div>

        <div class="textSet">
            @Html.Label("Color")<br/>
            @Html.DropDownList("Color", (TempData["Colors"] ?? new List<SelectListItem>() ) as IEnumerable<SelectListItem>)
        </div>

        <div class="textSet">
            @Html.Label("State")<br/>
            @Html.DropDownList("State", (TempData["States"] ?? new List<SelectListItem>() ) as IEnumerable<SelectListItem>)
        </div>
        
        <div class="textSet">
            @Html.Label("Car Number")<br/>
            <input type="text" name="CarNumber" />
        </div>

        <div class="textSet">
            @Html.Label("Dealership name")<br/>
            @Html.DropDownList("CarDealerId", (TempData["CarDealersData"] ?? new List<SelectListItem>() ) as IEnumerable<SelectListItem>)
        </div>
        
        <p class="textSet">
            <input type="button" value="Search" onclick="submitFormGetPartView('SearchForm', 'dataContainer');" />
            <input class="right" type="button" value="Reset" onclick="document.location.reload(true)" />
            <span class="clear" />
        </p>
    </fieldset>
}
