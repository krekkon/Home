@model IEnumerable<CarDealerProject.Models.Car>

<h2>Cars</h2>
<table>
    <tr>
        <th style="width: 50px;">
            @Html.DisplayNameFor(model => model.Brand)
        </th>
        <th style="width: 50px;">
            @Html.DisplayNameFor(model => model.Model)
        </th>
        <th style="width: 50px;">
            @Html.DisplayNameFor(model => model.Year)
        </th>
        <th style="width: 55px;">
            @Html.DisplayNameFor(model => model.State)
        </th>
        <th style="width: 60px;">
            @Html.DisplayNameFor(model => model.Color)
        </th>
        <th style="width: 80px;">
            @Html.DisplayNameFor(model => model.CarNumber)
        </th>

        <th style="width: 150px;">
            @Html.DisplayNameFor(model => model.CarDealerName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Brand)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Model)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Year)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.State)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Color)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CarNumber)
            </td>
            <td>
                @Html.ActionLink(item.CarDealerName, "Details", "CarDealer", new { id = item.CarDealerId }, null)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
