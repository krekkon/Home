@model CarDealerProject.Models.CarDealer

@using (Html.BeginForm("GetAllSimilar", "CarDealer", FormMethod.Post, new { id = "SearchForm" }))
{ 
    <h2>Search</h2>
    <br />
    @Html.AntiForgeryToken()
    <fieldset>
        <legend></legend>
        
        <div class="textSet">
            @Html.Label("Name")<br />
            <input type="text" name="Name" />
        </div>
        
        <div class="textSet full-width">
            @Html.Label("Country")<br />
            @Html.DropDownList("Country", TempData["Countries"] as IEnumerable<SelectListItem>)
        </div>
        
        <div class="textSet full-width">
            @Html.Label("City")<br />
            @Html.DropDownList("City", TempData["Cities"] as IEnumerable<SelectListItem>)
        </div>
        
        <div class="textSet">
            @Html.Label("Street")<br />
            <input type="text" name="Street" />
        </div>
        
        <p class="textSet">
            <input type="button" value="Search" onclick="submitFormGetPartView('SearchForm', 'dataContainer');" />
        </p>
    </fieldset>
}
