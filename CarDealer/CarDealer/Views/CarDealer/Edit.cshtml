@model CarDealerProject.Models.CarDealer

@{
    ViewBag.Title = "Edit car dealer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    
    <fieldset>
        <legend>Car dealer</legend>

        <div class="textSet">

            <div class="editor-label">
                @Html.LabelFor(model => model.Name)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Name)
                @Html.ValidationMessageFor(model => model.Name)
            </div>
        </div>
        
        <div class="textSet">
            <div class="editor-label">
                @Html.LabelFor(model => model.ParkingPlaces)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.ParkingPlaces)
                @Html.ValidationMessageFor(model => model.ParkingPlaces)
            </div>
        </div>

        <div class="textSet">
            <div class="editor-label">
                @Html.LabelFor(model => model.Country)
            </div>
            <div>
                @Html.EditorFor(model => model.Country)
                <span class="errorMessage">@Html.ValidationMessageFor(model => model.Country)</span>
            </div>
        </div>

        <div class="textSet">
            <div class="editor-label">
                @Html.LabelFor(model => model.City)
            </div>
            <div>
                @Html.EditorFor(model => model.City)
                <span class="errorMessage">@Html.ValidationMessageFor(model => model.City)</span>
            </div>
        </div>

        <div class="textSet">
            <div class="editor-label">
                @Html.LabelFor(model => model.ZipCode)
            </div>
            <div>
                @Html.EditorFor(model => model.ZipCode)
                <span class="errorMessage">@Html.ValidationMessageFor(model => model.ZipCode)</span>
            </div>
        </div>

        <div class="textSet">
            <div class="editor-label">
                @Html.LabelFor(model => model.Street)
            </div>
            <div>
                @Html.EditorFor(model => model.Street)
