@model CarDealerProject.Models.CarDealer

<div>
    <h3>Create new</h3>
    <br />
    @using (Html.BeginForm("Create", "CarDealer", FormMethod.Post, new { id = "CreateForm" }))
    { 
        @Html.ValidationSummary(true)
        <fieldset>
            <legend>Car dealer</legend>
            <div>
                <div class="textSet">
                    <div class="editor-label">
                        @Html.LabelFor(model => model.Name)
                    </div>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.Name)
                        <span class="errorMessage">@Html.ValidationMessageFor(model => model.Name)</span>
                    </div>
                </div>
                
                <div class="textSet">
                    <div class="editor-label">
                        @Html.LabelFor(model => model.ParkingPlaces)
                    </div>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.ParkingPlaces)
                        <span class="errorMessage">@Html.ValidationMessageFor(model => model.ParkingPlaces)</span>
                    </div>
                </div>
                
                <div class="textSet">
                    <div class="editor-label">
                        @Html.LabelFor(model => model.Country)
                    </div>
                    <div>
                        @Html.EditorFor(model => model.Country)
                        <span class="errorMessage">@Html.ValidationMessageFor(model => model.Country)</span>
                    </div>
                </div>
                
                <div class="textSet">
                    <div class="editor-label">
                        @Html.LabelFor(model => model.City)
                    </div>
                    <div>
                        @Html.EditorFor(model => model.City)
                        <span class="errorMessage">@Html.ValidationMessageFor(model => model.City)</span>
                    </div>
                </div>
                
                <div class="textSet">
                    <div class="editor-label">
                        @Html.LabelFor(model => model.ZipCode)
                    </div>
                    <div>
                        @Html.EditorFor(model => model.ZipCode)
                        <span class="errorMessage">@Html.ValidationMessageFor(model => model.ZipCode)</span>
                    </div>
                </div>
                
                <div class="textSet">
                    <div class="editor-label">
                        @Html.LabelFor(model => model.Street)
                    </div>
                    <div>
                        @Html.EditorFor(model => model.Street)
                        <span class="errorMessage">@Html.ValidationMessageFor(model => model.Street)</span>
                    </div>
                </div>
                
                <div class="textSet">
                    <div class="editor-label">
                        @Html.LabelFor(model => model.StreetNumber)
                    </div>
                    <div>
                        @Html.EditorFor(model => model.StreetNumber)
                        <span class="errorMessage">@Html.ValidationMessageFor(model => model.StreetNumber)</span>
                    </div>
                </div>

                <p class="textSet">
                    <input type="submit" value="Create" />
                </p>
            </div>
        </fieldset>
    }
</div>
